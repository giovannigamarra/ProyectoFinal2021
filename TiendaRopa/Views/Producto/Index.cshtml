@model TiendaRopa.Models.Producto


@{
    ViewData["Title"] = "Registro de ropas";
}

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<section id="catalogue" class="catalogue section-bg" style="text-align: center;">
<div class="section-title">
          <h2 >Registro de ropas</h2>
          <p>Registra los ropas completando el siguiente formulario</p>
</div>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">

   <form asp-controller="Producto" asp-action="Enviar">
       <div class="form-group formM">
            <label asp-for="nombre" class="colorForm"></label>
                <input asp-for="nombre" class="form-control"/>
                <span asp-validation-for="nombre" class="text-danger"></span>
        </div class="form-group">

              <div class="form-group formM">
                <label asp-for="modelo" class="colorForm" ></label>
                <input asp-for="modelo" class="form-control"/>
                <span asp-validation-for="modelo" class="text-danger"></span>

            </div>
            
               <div class="form-group formM">
                <label asp-for="marca" class="colorForm"></label>
                <input asp-for="marca" class="form-control"/>
                <span asp-validation-for="marca" class="text-danger"></span>

            </div>
          <div class="form-group formM">
                <label asp-for="sku" class="colorForm" ></label>
                <input asp-for="sku" class="form-control"/>
                <span asp-validation-for="sku" class="text-danger"></span>

            </div>

              <div class="form-group formM">
                <label asp-for="talla" class="colorForm"></label>
                <input asp-for="talla" class="form-control"/>
                <span asp-validation-for="talla" class="text-danger"></span>

            </div>

               <div class="form-group formM">
                <label asp-for="pages" class="colorForm"></label>
                <input asp-for="pages" class="form-control"/>
                <span asp-validation-for="pages" class="text-danger"></span>

            </div>

               <div class="form-group formM">
                <label asp-for="precio" class="colorForm"></label>
                <input asp-for="precio" class="form-control"/>
                <span asp-validation-for="precio" class="text-danger"></span>

            </div>
            
            <div class="form-group formM">
                <label asp-for="descripcion" class="colorForm"></label>
                <textarea asp-for="descripcion" class="form-control"></textarea>
            </div> 

            <div class="form-group formM">
                <label asp-for="imagen" class="colorForm"></label>
                <input asp-for="imagen" class="form-control"></input>
                <span type="text" asp-validation-for="imagen" class="text-danger"></span>
            </div> 

              <div class="form-group text-center" >
              <button type="submit" class="btn btn-success">Registrar</button>
              <button asp-action="Listar" class="btn btn-danger"> Cancelar</button>
              </div>
              
   </form>

</div>
</div>
</div>
</section>
